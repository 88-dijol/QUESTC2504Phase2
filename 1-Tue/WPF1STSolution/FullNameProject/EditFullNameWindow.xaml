<Window x:Class="FullNameProject.EditFullNameWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FullNameProject"
        mc:Ignorable="d"
        Title="EditFullNameWindow" Height="450" Width="800">
    <Canvas>
        <TextBlock x:Name="lblFirstName" TextWrapping="Wrap" Text="FIRST NAME" FontWeight="Bold" FontSize="18" Margin="162,87,515,317"/>
        <TextBlock x:Name="lblLastName" TextWrapping="Wrap" Text="LAST NAME" FontWeight="Bold" FontSize="18" Margin="165,149,512,255"/>
        <Button x:Name="btnUpdate" Content="UPDATE" FontWeight="Bold" FontSize="16" Margin="326,260,368,120" DataContext="{Binding Person.Update}"/>
        <TextBox  x:Name="txtFirstName"  HorizontalAlignment="Left"  TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="120" Height="37" Canvas.Left="319" Canvas.Top="89" DataContext="{Binding Person.FirstName}"/>
        <TextBox  x:Name="txtLastName"  TextWrapping="Wrap" Text="" Width="120" Height="37" Canvas.Left="321" Canvas.Top="143" HorizontalAlignment="Left" VerticalAlignment="Top" DataContext="{Binding Person.LastName}"/>

    </Canvas>
</Window>
