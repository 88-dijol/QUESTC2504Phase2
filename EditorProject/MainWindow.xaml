        <TextBox  x:Name ="txtEditor"  AcceptsReturn="True" TextWrapping="Wrap" Text="C# and WPF" Width="278" Canvas.Left="163" Canvas.Top="214" HorizontalAlignment="Center" VerticalAlignment="Top" Height="178"/>

    </Canvas>
