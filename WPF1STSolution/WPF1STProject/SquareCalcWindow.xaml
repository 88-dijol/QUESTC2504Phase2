<Window x:Class="WPF1STProject.SquareCalcWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPF1STProject"
        mc:Ignorable="d"
        Title="SquareCalcWindow" Height="450" Width="800" Closing="Window_Closing">
    <Canvas>
        <TextBlock x:Name="lblNumber1"  Canvas.Left="79" TextWrapping="Wrap" Canvas.Top="67"><Run Text="Number1"/><LineBreak/><Run/></TextBlock>
        <TextBlock x:Name="lblResult" Canvas.Left="80" TextWrapping="Wrap" Canvas.Top="144"><Run Text="Result"/><LineBreak/><Run/></TextBlock>
        <TextBox  x:Name="txtNumber1" TextWrapping="Wrap" Width="120" Canvas.Left="237" Canvas.Top="69"/>
        <TextBox x:Name="txtResult" TextWrapping="Wrap" Width="120" Canvas.Left="241" Canvas.Top="145" IsEnabled="False"/>
      
        <Button  x:Name="btnSquare" Content="Find Square" Canvas.Left="77" Canvas.Top="227" HorizontalAlignment="Left" Height="45" VerticalAlignment="Top" Width="117" Click="btnSquare_Click" />
        <Button x:Name="btnCube" Content="Find Cube" Canvas.Left="346" Canvas.Top="224" HorizontalAlignment="Left" Height="39" VerticalAlignment="Center" Width="94" Click="btnCube_Click"/>


    </Canvas>

</Window>
